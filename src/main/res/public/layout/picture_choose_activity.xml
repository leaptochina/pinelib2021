<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#30000000"
    android:id="@+id/totalLayout"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/clickCloseableLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/choose_picture_white_bg"
        android:orientation="vertical">

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="@string/picture_choose_title"
            android:textColor="@color/black" />

        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/ccc"/>

        <TextView
            android:id="@+id/from_camera"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginHorizontal="10dp"
            android:text="@string/picture_choose_from_camera"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e6e6e6"/>

        <TextView
            android:id="@+id/from_album"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginHorizontal="10dp"
            android:text="@string/picture_choose_from_album"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:background="#e6e6e6"/>

        <TextView
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginHorizontal="10dp"
            android:text="@string/cancel"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>